<div class="container">
    <div class="row">
        <!-- Ready to be graded-->
        <div class="col-sm-6">
            <h4 class="text-center">Ready to Be Graded</h4>
            <ul>
                {{#each task}} {{#if completed}}
                <div class="row">

                    <div class="col-sm-6 text-center completedTask">
                        <p>{{id}}. {{task_name}}</p>
                        {{!-- student Name --}}
                    </div>
                    <div class="col-sm-6">
                        <button type="submit" data-id="id" class="btn btn-dark enterGrade">
                            Enter Grade
                        </button>
                        <input class="input-field" id="taskGrade">
                    </div>
                </div>
                <hr />
                {{/if}} {{/each}}
            </ul>
        </div>

        <div class="col-sm-6">
            <h4 class="text-center">Grading Completed</h4>
            <ul>

                <div class="row">
                    {{#each task}} {{#if graded}}
                    <div class="col-sm-6 text-center gradedTask">
                        <p>{{id}}. {{task_name}}</p>
                        {{!-- student name --}}
                    </div>
                    <div class="col-sm-6">
                        {{!-- <button type="submit" data-id="id" class="btn btn-dark devoured">
              
            </button> --}}
                        {{!-- grade --}}
                    </div>
                </div>
                <hr />
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>
</div>
<!-- form -->

<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <h4 class="text-center">Create New Task</h4>
        <form class="text-center create-form">
            <div class="form-group">
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="2"></textarea>
                <div class="container">
                    <div class="row">
                        <div class='col-sm-6'>
                            <div class="form-group">
                                <div class="input-group date">
                                    <input type="text" class="form-control"><span class="input-group-addon"><i
                                            class="glyphicon glyphicon-th"></i></span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div>
                    <label class="label">
                    </label>
                </div>
            </div>
        </form>
    </div>
</div>