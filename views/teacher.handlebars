<br>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Welcome <span class="member-name"></span></h2>
        </div>
    </div>
</div>
<script type="text/javascript" src="js/members.js"></script>
{{!-- grading table --}}
<div class="container-2">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Grade</th>
        <th scope="col">Percentage</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>A</td>
        <td>100-90</td>
      </tr>
      <tr>
        <td>B</td>
        <td>89-80</td>
      </tr>
      <tr>
        <td>C</td>
        <td>79-70</td>
      </tr>
      <tr>
        <td>D</td>
        <td>69-60</td>
      </tr>
      <tr>
        <td>F</td>
        <td>59-0</td>
      </tr>
    </tbody>
  </table>
</div>
{{!-- body --}}
<div class="container grading-page">
  <div class="row">
    <!-- Ready to be graded-->
    <div class="col-sm-6">
      <h4 class="text-center">Ready to Be Graded</h4>
      <ul>
        {{#each task}} {{#unless dataValues.graded}}
        <div class="row">

          <div class="col-sm-6 text-center completedTask">
            <p>{{dataValues.id}}. {{dataValues.taskDetail}}</p>
            {{!-- student Name --}}
          </div>
          <div class="col-sm-6">
            <button type="submit" data-id="{{dataValues.id}}" class="btn btn-dark enterGrade">
              Enter Grade
            </button>
            <input class="input-field gradeInput" data-value= "{{dataValues.id}}">
          </div>
        </div>
        <hr />
        {{/unless}}
       {{/each}}
      </ul>
    </div>

    <div class="col-sm-6">
      <h4 class="text-center">Grading Completed</h4>
      <ul>
 {{#each task}} {{#if dataValues.graded}}
        <div class="row">
          <div class="col-sm-6 text-center gradedTask">
            <p>{{dataValues.id}}. {{dataValues.taskDetail}} </p>
            <div class="grade-percent">Grade: {{dataValues.taskGrade}}</div>
            {{!-- student name --}}
          </div>
          <div class="col-sm-6">
          </div>
        </div>
        <hr />
        {{/if}} {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="row new-task">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <h4 class="text-center">Create New Task</h4><!-- form -->
    <div class="bootstrap-iso">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-6 col-sm-6 col-xs-12">

            <!-- Calendar Form code begins -->
            <form method="post">
              <div class="form-group">
                <!-- Date input -->
                <label class="control-label" for="date">Select Due Date</label>
                <input class="form-control" id="date" name="date" placeholder="MM/DD/YYYY" type="text" />
              </div>
              <div class="form-group"> 
              </div>
            </form>
            <!-- Form code ends -->

          </div>
        </div>
      </div>
      <form class="text-center create-form newTaskForm">
        <div class="form-group ">
          <textarea class="form-control" id="taskText" rows="2"></textarea>
          <br>
          <div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <script src="/js/teacher.js"></script>